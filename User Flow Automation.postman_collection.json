							"// Parse the JSON response",
							"const jsonData = pm.response.json();",
							"",
							"// Test: Status code is 201 (Created)",
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"// Test: Response has an id field",
							"pm.test(\"Response has an id field\", function () {",
							"    pm.expect(jsonData).to.have.property(\"id\");",
							"});",
							"",
							"// Extract and store the id in the environment variable",
							"if (jsonData.id) {",
							"    pm.environment.set(\"userId\", jsonData.id);",
							"    console.log(\"userId successfully saved to environment variable: \" + jsonData.id);",
							"}"
						],
						"type": "text/javascript",
